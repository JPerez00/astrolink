---
import "../styles/global.css";

export interface Props {
  title?: string;
  description?: string;
  creator?: string;
  repoLink?: string;
}

const {
  title = "AstroLinks - Link-in-bio Template", 
  description = "A simple Link-In-Bio template built with Astro & Tailwind CSS.", 
  creator = "Jorge Perez", 
  repoLink = "https://github.com/JPerez00/astrolink"
} = Astro.props;
---

<!DOCTYPE html>
<html lang="en" class="h-full bg-gray-100 antialiased">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/astrolinks/favicon.svg" />
    <meta name="generator" content={Astro.generator} />

    <!-- Title -->
    <title>{title}</title>

    {description && <meta name="description" content={description} />}
    {creator && <meta name="author" content={creator} />}
    {repoLink && <meta name="repoLink" content={repoLink} />}
  </head>
  <body class="min-h-screen flex flex-col m-0 mx-4 lg:mx-auto">
    <!-- Layoutâ€™s content goes here -->
    <slot />
    <!-- Footer Section -->
    <footer class="mt-8 text-center text-zinc-400 text-sm">
      <p>
        <a href="https://github.com/JPerez00/astrolink" target="_blank" rel="noopener noreferrer" class="hover:underline">GitHub Repo</a>
        &nbsp;|&nbsp;
        <a href="https://opensource.org/licenses/MIT" target="_blank" rel="noopener noreferrer" class="hover:underline">MIT License</a>
      </p>
    </footer>
  </body>
</html>
