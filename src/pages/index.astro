---
import Layout from "../layouts/Layout.astro";
import { Icon } from "astro-icon/components";

const links = [
  {
    name: "GitHub",
    url: "https://github.com/yourusername",
    icon: "github", // This references `src/icons/github.svg`
  },
  {
    name: "LinkedIn",
    url: "https://www.linkedin.com/in/yourusername",
    icon: "linkedin",
  },
  {
    name: "Twitter",
    url: "https://twitter.com/yourusername",
    icon: "twitter", // `src/icons/twitter.svg`
  },
  {
    name: "Instagram",
    url: "#",
    icon: "instagram",
  },
];
---

<Layout>
  <main class="mx-auto w-full max-w-md bg-white rounded-lg shadow-md p-6 text-center">
    <!-- Profile Image -->
    <img
      src="https://via.placeholder.com/150"
      alt="Profile Picture"
      class="w-32 h-32 rounded-full mx-auto mb-4 object-cover"
    />

    <!-- Header / Name -->
    <h1 class="text-2xl font-bold mb-2">John Doe</h1>

    <!-- Subheader / Description -->
    <p class="text-gray-600 mb-6">
      Freelance Developer & Content Creator.
      <br />
      Frontend, Backend, everything in between!
    </p>

    <!-- Links -->
    <div class="flex flex-col gap-3">
      {links.map((link) => (
        <a
          href={link.url}
          target="_blank"
          rel="noopener noreferrer"
          class="flex items-center justify-center gap-2 px-4 py-3 rounded-full
                 bg-gray-100 hover:bg-gray-200 transition-colors
                 text-gray-700 font-medium"
        >
          <!-- Render our local or library-based icon. -->
          <Icon name={link.icon} class="w-5 h-5" aria-label={link.name} />
          {link.name}
        </a>
      ))}
    </div>
  </main>
</Layout>
